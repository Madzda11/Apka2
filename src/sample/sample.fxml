<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="326.0" prefWidth="292.0">
         <children>
            <VBox alignment="CENTER" layoutX="65.0" layoutY="45.0" prefHeight="200.0" prefWidth="163.0">
               <children>
                  <Label fx:id="label" text="Label" />
                  <Button fx:id="button" mnemonicParsing="false" onAction="#handleClick" prefHeight="25.0" prefWidth="141.0" text="Wybierz jedną opcję" />
                  <RadioButton fx:id="button1" mnemonicParsing="false" text="Opcja1">
                     <toggleGroup>
                        <ToggleGroup fx:id="myGroup" />
                     </toggleGroup></RadioButton>
                  <RadioButton fx:id="Button2" mnemonicParsing="false" text="Opcja2" toggleGroup="$myGroup" />
                  <RadioButton fx:id="Button3" mnemonicParsing="false" text="Opcja3" toggleGroup="$myGroup" />
               </children>
            </VBox>
         </children>
      </Pane>
   </children>
</GridPane>
